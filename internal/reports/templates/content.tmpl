{{define "content" -}}
{{ $Services := .Services }}
{{ $Dates := .Dates }}
<div class="card-container">
    <h3 class="title">{{.Title}} </h3>
    <table class="styled-table">
    <tr><th>Service</th>{{range .Dates}}<th>{{$y:= niceDate .Start}}{{$y}}</th>{{end}}
    {{range $Services := $Services }}
    <tr><td>{{$Services.Name}}</td>
        {{range $Dates := $Dates}}
        {{$x:= getPrice $Services $Dates}}
        <td>{{$x}}</td>
        {{end}}
    </tr>
    {{end}}
    </table>
</div>
{{end}}

